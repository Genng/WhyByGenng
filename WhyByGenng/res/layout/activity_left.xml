<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/actionbar_bg_grey_transparent"
    >
    <ListView 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:listSelector="@android:color/transparent"
    	android:scrollbars="none"
    	android:layout_above="@+id/left_lv2"
    	android:divider="@android:color/background_dark"
    	android:id="@+id/left_list"
        />
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:orientation="vertical"
    	android:id="@+id/left_lv2"
        >
       <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/pop_item_selector"
    	android:id="@+id/left_lv_1"
    	android:onClick="onClick"
        >
        <TextView 
        android:layout_width="fill_parent"
    	android:layout_height="38dp"
    	android:text="我的收藏"
    	android:textColor="@color/white"
    	android:textSize="18sp"
    	android:gravity="center"
        />
        
    </LinearLayout> 
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/pop_item_selector"
    	android:id="@+id/left_lv_2"
    	android:onClick="onClick"
        >
        <TextView 
        android:layout_width="fill_parent"
    	android:layout_height="38dp"
    	android:text="贡献问题"
    	android:textColor="@color/white"
    	android:textSize="18sp"
    	android:gravity="center"
        />
        
    </LinearLayout> 
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/pop_item_selector"
    	android:id="@+id/left_lv_3"
    	android:onClick="onClick"
        >
        <TextView 
        android:layout_width="fill_parent"
    	android:layout_height="38dp"
    	android:text="小额捐助"
    	android:textColor="@color/white"
    	android:textSize="18sp"
    	android:gravity="center"
        />
        
    </LinearLayout> 
        
    </LinearLayout>
    
    
    

</RelativeLayout>