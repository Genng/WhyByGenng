<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
     <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/actionbar_bg_blue_meizu_transparent"
        android:id="@+id/rv_1"
        >
        <ImageButton 
             android:background="@drawable/logo_selector"
             android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:layout_centerVertical="true"
    		 android:id="@+id/logo_ibt"
            />
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toRightOf="@+id/logo_ibt"
             android:layout_centerVertical="true"
             android:textColor="@color/white"
             android:textSize="17sp"
             android:id="@+id/title_tx"
             android:textStyle="bold"
            />
        <ImageButton 
            android:background="@drawable/upload_selector"
             android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:layout_centerVertical="true"
    		 android:layout_toLeftOf="@+id/add_ibt"
    		 android:layout_marginRight="5dp"
    		 android:id="@+id/up_ibt"
    		 android:visibility="gone"
            />
        <ImageButton 
            android:background="@drawable/more_selector"
             android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:layout_centerVertical="true"
    		 android:layout_alignParentRight="true"
    		 android:layout_marginRight="5dp"
    		 android:id="@+id/add_ibt"
            />
    </RelativeLayout>
</LinearLayout>